<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>

<BorderPane id="border-pane" prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.infnet.ui.controllers.TelaProdutosController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <Label id="tab__title" text="Produtos" />
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#abrirTabCadastro" text="Cadastrar Produto">
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                    </cursor>
                </Button>
            </HBox>
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" />
                </padding>
                <TextField promptText="Pesquisar por produto, fornecedor ou ID" HBox.hgrow="ALWAYS" />
                <ChoiceBox fx:id="filtro" prefWidth="150.0" />
                <Button mnemonicParsing="false" text="Pesquisar" />
            </HBox>
            <Separator prefWidth="200.0" />
        </VBox>
    </top>
    <center>
        <VBox spacing="20.0" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
            <TableView fx:id="tabelaProdutos" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colunaId" maxWidth="-1.0" minWidth="70.0" prefWidth="75.0" text="Id" />
                    <TableColumn fx:id="colunaProduto" prefWidth="75.0" text="Produto" />
                    <TableColumn fx:id="colunaFornecedor" prefWidth="75.0" text="Fornecedor" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#excluirProduto" text="Excluir Produto" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
        </VBox>
    </center>
</BorderPane>
